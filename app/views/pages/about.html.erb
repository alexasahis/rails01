<h1 class="text-center">Welcome to Rails!</h1>
<div class="container body-content">
  <p/>
  <button type="button" class="btn btn-lg btn-block btn-outline-primary">Ruby Version: <%= @ruby_ver %></button>
  <p/>
  <button type="button" class="btn btn-lg btn-block btn-outline-primary">Rails Version: <%= @rails_ver %></button>
  <p/>
  <button type="button" class="btn btn-lg btn-block btn-outline-primary">Environment: <%= @env %></button>
  <p/>
  <button type="button" class="btn btn-lg btn-block btn-outline-primary">Host Name: <%= @hostname %></button>
  <p/>
  <button type="button" class="btn btn-lg btn-block btn-outline-primary">Host IP: <%= @ipaddr %></button>
  <p/>
  <button type="button" class="btn btn-lg btn-block btn-outline-primary">Remote IP: <%= @remoteip %></button>
  <p/>
  <button type="button" class="btn btn-lg btn-block btn-outline-primary">Time: <%= @currtime %></button>
</div>
